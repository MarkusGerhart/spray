style BusmodDefaultStyle {
    description = "The default style of the bm diagram type." 
    font-size = 12
} 

style BusinessClassStyle extends BusmodDefaultStyle { 
    description = "The style for the business class." 
    background-color = yellow
}
   
style MydiagramDefaultStyle extends JAVA org.eclipselabs.spray.runtime.graphiti.styles.DefaultSprayStyle {
    description = "The default style of the mydiagram diagram type."   
     transparency = 0.05
     line-color = black
     line-style = solid 
     line-width = 1 
     font-color = black
}  

style FontStyle  extends  MydiagramDefaultStyle { 
    background-color = transparent
    
}

style Unique extends MydiagramDefaultStyle {
    line-style = dash-dot
    background-color = light-orange
}
