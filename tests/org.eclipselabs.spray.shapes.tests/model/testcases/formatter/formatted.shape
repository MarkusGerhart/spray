shape RectangleShape {
	rectangle {
		position (x=0, y=0)
		size (width=100, height=100)
	}
}

shape ClassShape style MydiagramDefaultStyle {
	rectangle {
		position (x=0, y=0)
		size (width=100, height=420)
		text {
			position (x=0, y=0)
			size (width=100, height=20)
			id = classname
		}
		line {
			point (x=0, y=21)
			point (x=100, y=21)
		}
		rectangle {
			compartment (
				layout = vertical
				id = attributes
				stretching (
					horizontal=false,
					vertical=true
				)
				spacing=10
				margin=5
				invisible
			)
			position (x=0, y=22)
			size (width=95, height=196)
		}
		line {
			point (x=0, y=220)
			point (x=100, y=220)
		}
		rectangle {
			compartment (
				layout = vertical
				id = businessrules
			)
			position (x=0, y=222)
			size (width=95, height=196)
		}
	}
}

shape TextShape style MydiagramDefaultStyle {
	text style MydiagramDefaultStyle {
		position (x=0, y=0)
		size (width=80, height=25)
		id = textId2
	}
}

shape ShapeWithText {
	rectangle {
		size (width=100, height=200)
		position (x=0, y=0)
		text {
			size (width=100, height=30)
			position (x=0, y=30)
			align (horizontal=center, vertical=middle)
			id = shapeName
		}
		text {
			size (width=100, height=30)
			position (x=0, y=30)
			id = text2
		}
	}
}

connection ConnectionWithText {
	placing {
		position (offset=1.0, radius=0, angle=0)
		polygon {
			point (x=-10, y=10)
			point (x=0, y=0)
			point (x=-10, y=-10)
			style (background-color=black)
		}
	}
	placing {
		position (offset=0.0, radius=0, angle=0)
		polygon {
			point (x=0, y=0)
			point (x=-20, y=10)
			point (x=-40, y=0)
			point (x=-20, y=-10)
		}
	}
	placing {
		position (offset=0.5, radius=20, angle=90)
		text {
			size (width=100, height=20)
			id = text1
		}
	}
	placing {
		position (offset=0.5, radius=20, angle=270)
		text {
			size (width=100, height=20)
			id = text2
		}
	}
}