shape RelativeAnchorsTest {
	ellipse {
		position (x=0, y=0)
		size (width=10, height=10)
	}
	anchor {
		position (xoffset=0.1,yoffset=0.0)
/* XPECT validationIssues at 'position (xoffset=0.8,yoffset=|1.1)' ---
error "The anchor offset (yoffset) should be defined in the range 0.0 and 1.0."
--- */
		position (xoffset=0.8,yoffset=1.1)
/* XPECT validationIssues at 'position (xoffset=|1.1,yoffset=0.8)' ---
error "The anchor offset (xoffset) should be defined in the range 0.0 and 1.0."
--- */
		position (xoffset=1.1,yoffset=0.8)
/* XPECT validationIssues at 'position (xoffset=|1.2,yoffset=1.2)' ---
error "The anchor offset (xoffset) should be defined in the range 0.0 and 1.0."
error "The anchor offset (yoffset) should be defined in the range 0.0 and 1.0."
--- */
		position (xoffset=1.2,yoffset=1.2)
	}
}


