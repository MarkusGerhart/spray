<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="xspray"
            id="org.eclipselabs.spray.xtext.Xspray"
            name="Xspray Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="org.eclipselabs.spray.xtext.Xspray.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="org.eclipselabs.spray.xtext.Xspray.validate">
         <activeWhen>
            <reference
                    definitionId="org.eclipselabs.spray.xtext.Xspray.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="org.eclipselabs.spray.xtext.Xspray.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="org.eclipselabs.spray.xtext.Xspray" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.eclipselabs.spray.xtext.Xspray"
            name="Xspray">
            <keywordReference id="org.eclipselabs.spray.xtext.ui.keyword_Xspray"/>
        </page>
        <page
            category="org.eclipselabs.spray.xtext.Xspray"
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="org.eclipselabs.spray.xtext.Xspray.coloring"
            name="Syntax Coloring">
            <keywordReference id="org.eclipselabs.spray.xtext.ui.keyword_Xspray"/>
        </page>
        <page
            category="org.eclipselabs.spray.xtext.Xspray"
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="org.eclipselabs.spray.xtext.Xspray.templates"
            name="Templates">
            <keywordReference id="org.eclipselabs.spray.xtext.ui.keyword_Xspray"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="org.eclipselabs.spray.xtext.ui.keyword_Xspray"
            label="Xspray"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="org.eclipselabs.spray.xtext.Xspray.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="org.eclipselabs.spray.xtext.Xspray.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="org.eclipselabs.spray.xtext.Xspray.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="org.eclipselabs.spray.xtext.Xspray.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="org.eclipselabs.spray.xtext.Xspray.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="xspray">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="xspray">
        </resourceServiceProvider>
    </extension>



	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="org.eclipselabs.spray.xtext.Xspray.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.eclipselabs.spray.xtext.Xspray.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>

  <extension point="org.eclipse.compare.contentViewers">
    <viewer id="org.eclipselabs.spray.xtext.Xspray.compare.contentViewers"
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="xspray">
    </viewer>
  </extension>
  <extension point="org.eclipse.compare.contentMergeViewers">
    <viewer id="org.eclipselabs.spray.xtext.Xspray.compare.contentMergeViewers"
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="xspray" label="Xspray Compare">
     </viewer>
  </extension>
  <extension point="org.eclipse.ui.editors.documentProviders">
    <provider id="org.eclipselabs.spray.xtext.Xspray.editors.documentProviders"
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
            extensions="xspray">
    </provider>
  </extension>

   <extension
         point="org.eclipse.xtext.builder.participant">
      <participant
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant">
      </participant>
   </extension>
   <!-- quickfix marker resolution generator -->
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator">
      </markerResolutionGenerator>
   </extension>


	<!-- Manual additions -->
   <extension
         point="org.eclipse.ui.newWizards">
         <category
            name="%Spray_Wizard_Category"
            id="org.xspray.projectwiz">
      </category>
      <wizard
            category="org.xspray.projectwiz"
            class="org.eclipselabs.spray.xtext.ui.XsprayExecutableExtensionFactory:org.eclipselabs.spray.xtext.ui.wizard.SprayNewProjectWizard"
            icon="icons/xspray-logo-16x16.png"
            id="org.eclipselabs.spray.xtext.ui.wizard.SprayNewProjectWizard"
            name="Xspray Project"
            project="true">
      </wizard>
   </extension>

	
</plugin>
