class Association icon "connection16.gif":  
    connection BPMN_ConditionalFlow  () 
    {  
        from source;
        to   target;
        fromText text()  "source " + source.name;
        connectionText text() targetMultiplicity.name;
        toText text() name;
    } 
    behavior {
        create into associations palette "Connections"  askFor name;
        group samen;
    }

