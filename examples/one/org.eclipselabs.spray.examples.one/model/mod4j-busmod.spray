class Enumeration :  
  container ()
  {
          text ( )  { "<<"+eClass.name+">> " + name};
          line ( color=black width=2);
          reference enumerationLiterals attribute name;
	}  
	behavior {
		create into  enumerations palette "Shapes" askFor name ;
		menuitem "Menu Item";
	} 
  
