diagram Statemachine 
extension "diagram"
import statemachine.*

class State {
	rectangle (color=black fill=white width=100)
}

class Transition { 
	connection (width=1) {
		from source;
		to target;
		fromText text () eContainer.name;
		toText text () state.name;
		connectionText text (width=1) event.name;
	}
}